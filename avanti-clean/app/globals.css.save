:root{
  --bg-0:#0f1115;       /* fundo base */
  --bg-1:#131720;       /* painel */
  --muted:#94a3b8;      /* texto secundário */
  --text:#e5e7eb;       /* texto principal */
  --brand:#84cc16;      /* verde-lima */
  --brand-700:#65a30d;
  --accent:#1f2937;     /* cinza escuro */
  --ring: 0 0 0 3px rgba(132,204,22,.25);
}

*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  color:var(--text);
  background:
    radial-gradient(1200px 480px at 50% -20%, rgba(132,204,22,.10), transparent 60%),
    radial-gradient(1000px 600px at 120% 120%, rgba(31,41,55,.6), transparent 50%),
    var(--bg-0);
  font: 400 16px/1.5 ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, 'Helvetica Neue', Arial, 'Noto Sans', 'Liberation Sans', sans-serif;
}

/* container central */
.login-wrap{
  min-height:100dvh;
  display:grid;
  place-items:center;
  padding:24px;
}

/* card vidro */
.card{
  width:min(640px, 96vw);
  background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
  backdrop-filter: blur(10px);
  border:1px solid rgba(148,163,184,.15);
  border-radius:18px;
  box-shadow:
    0 15px 60px rgba(0,0,0,.55),
    inset 0 1px 0 rgba(255,255,255,.08);
  padding:36px 32px 28px;
}

/* topo */
.brand{
  display:flex; align-items:center; justify-content:center; gap:14px;
  margin-bottom:18px;
}
.brand img{height:28px; width:auto; display:block}
.brand h1{
  margin:0; font-weight:800; letter-spacing:.3px; color:#e2e8f0;
  text-shadow:0 1px 0 rgba(0,0,0,.6);
}
.brand .gr{ color:var(--brand); font-weight:800 }

.sub{
  text-align:center; color:var(--muted); font-size:14px;
  margin-bottom:26px;
}

/* form */
label{
  display:block; font-size:14px; color:#cbd5e1; margin:12px 0 6px;
}
input{
  width:100%;
  height:46px;
  color:#e8eef7;
  background:#0f1420;
  border:1px solid rgba(148,163,184,.22);
  border-radius:10px;
  padding:10px 14px;
  outline:none;
  transition:.2s border,.2s box-shadow,.2s background;
  box-shadow: inset 0 1px 0 rgba(255,255,255,.02);
}
input::placeholder{color:#94a3b8}
input:hover{border-color:rgba(148,163,184,.35)}
input:focus{
  border-color: var(--brand);
  box-shadow: var(--ring);
  background:#0c1220;
}

/* botão */
button{
  width:100%;
  height:48px;
  border:0; border-radius:12px;
  margin-top:18px;
  background: linear-gradient(180deg, var(--brand), var(--brand-700));
  color:#0b1300; font-weight:800; letter-spacing:.3px;
  cursor:pointer; transition:.15s transform,.15s filter,.15s box-shadow;
  box-shadow: 0 10px 30px rgba(132,204,22,.25);
}
button:hover{ filter:brightness(1.03) saturate(1.02) }
button:active{ transform: translateY(1px) }




/* link recuperar */
.forgot{
  display:block; text-align:center; margin-top:16px;
  color:var(--brand); text-decoration:none; font-weight:600;
}
.forgot:hover{ text-decoration:underline }

/* --- Login Layout Básico --- */
.login-wrap{
  min-height:100vh;
  display:grid;
  place-items:center;
  padding:24px;
  background: radial-gradient(1200px 400px at 50% -20%, rgba(255,255,255,.07), transparent 60%),
              linear-gradient(180deg, #0d0f11, #0b0d0f 60%, #0a0c0e);
}

.card{
  width:min(640px, 96vw);
  background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
  backdrop-filter: blur(10px);
  border:1px solid rgba(255,255,255,.08);
  border-radius:18px;
  padding:28px;
  box-shadow:
    0 12px 40px rgba(0,0,0,.5),
    inset 0 1px 0 rgba(255,255,255,.05);
  color:#e5e7eb;
}

.login-label{display:block;margin:10px 0 6px;color:#e5e7eb;font-size:14px;font-weight:600;}
.login-input{width:100%;padding:12px;border-radius:10px;background:#1a1f25;border:1px solid #1d1d5db;font-size:15px;color:#e8eefc;}
.login-input:focus{outline:none;border-color:#84cc16;box-shadow:0 0 0 2px rgba(132,204,22,.32);}
.login-btn{margin-top:18px;width:100%;padding:12px;font-weight:700;background:#84cc16;color:#111827;border-radius:10px;cursor:pointer;}
.login-btn:disabled{opacity:.6;cursor:default;}
.login-forgot{display:block;margin-top:18px;text-align:center;color:#84cc16;text-decoration:none;font-size:14px;}
.login-forgot:hover{text-decoration:underline;}
